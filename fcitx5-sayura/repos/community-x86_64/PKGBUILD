pkgname=fcitx5-sayura
pkgver=5.0.5
pkgrel=1
pkgdesc="Sinhala Transe IME engine for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-sayura"
license=('GPL')
depends=('fcitx5')
makedepends=('extra-cmake-modules')
source=("https://download.fcitx-im.org/fcitx5/$pkgname/$pkgname-$pkgver.tar.xz"{,.sig})
sha512sums=('6d14cf4b8a01a40d415a06fac2bbd15818324ad5fc4bc9815ae7566c0caee0b9ed4425c34fcec47fa0fda687147a9c08d49ec572fb739948e575c6fff65baa0b'
            'SKIP')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname-$pkgver

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
