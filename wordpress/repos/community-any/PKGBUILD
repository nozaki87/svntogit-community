pkgname=wordpress
pkgver=5.8.1
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
b2sums=('83bad2abc8c5a040e96e0387d6738abddbc976a8b74d7c019860133b7741ddce16bab43009eaacb481e66ce48d44320aa1b5d9ee3e8da8fcc33c30dc95bc8654')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}

# getver: core.trac.wordpress.org/timeline?milestone=on
