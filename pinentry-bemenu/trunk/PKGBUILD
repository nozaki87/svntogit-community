# Contributor:  Thomas Wei√üschuh <thomas t-8ch de>

pkgname=pinentry-bemenu
pkgver=0.9.0
pkgrel=1
pkgdesc="Pinentry based on bemenu"
arch=("x86_64")
url="https://github.com/t-8ch/pinentry-bemenu"
license=("GPL2")
provides=("pinentry")
depends=("bemenu" "libassuan" "libgpg-error" "popt")
makedepends=("meson" "ninja" "cmake" "pkgconf" "popt")
source=(
	pinentry-bemenu-$pkgver.tar.gz::https://github.com/t-8ch/$pkgname/archive/refs/tags/v$pkgver.tar.gz
)
sha512sums=('d69388c1734eee3bd3f97145f8c80d695f8ab18b6728cd675360bbddd55ec493f02e089187e0b88005ddb4cf628599d56ef5f055db456d5e5d3ec5760b807ae5')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	arch-meson build
	cd build
	ninja
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	DESTDIR="$pkgdir" ninja install
}
